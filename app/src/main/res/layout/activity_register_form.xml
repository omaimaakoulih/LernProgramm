<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#274472"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#274472"
            android:padding="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_back"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:text="Registration"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/listview_border_radius"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Formation"
                    android:textAlignment="center"
                    android:background="@drawable/border_all_edittext"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:id="@+id/formation"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Name "
                    android:textAlignment="center"
                    android:id="@+id/formusername"
                    android:background="@drawable/border_all_edittext"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email@gmail.com"
                    android:textAlignment="center"
                    android:id="@+id/formuseremail"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/border_all_edittext"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:textAlignment="center"
                    android:id="@+id/formphonenum"
                    android:background="@drawable/border_all_edittext"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/countyspinner"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="50dp"
                        android:paddingLeft="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        />
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cityspinner"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="50dp"
                        android:paddingLeft="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of birth"
                    android:textAlignment="center"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:id="@+id/birthday"
                    android:background="@drawable/border_all_edittext"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:layout_marginBottom="10dp"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/agree"
                    android:text="Agree With Terms  Conditions"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:id="@+id/formregisterbtn"
                    android:textColor="@color/white"
                    android:backgroundTint="#274472"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>